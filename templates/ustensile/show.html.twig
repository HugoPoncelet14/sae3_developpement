{% extends 'base.html.twig' %}

{% block title %}{{ ustensile.name }}{% endblock %}

{% block body %}
    <h1 class="title_small-padding">{{ ustensile.name }}</h1>
    <div class="ustensile_info-container">
        <div class="recipe_image-container" id="ustensile">
            <div class="recipe_image-box" id="ustensile">
                <img  src="/ustensile/{{ ustensile.id }}/image" alt="Image de l'ustensile">
            </div>
        </div>
    </div>
    <a class="profile_update-button btn btn-lg" href="{{ path('app_ustensile_update', {'id': ustensile.id}) }}" role="button">Modifier</a>
    <div class="profile_delete-button-container">
        <a class="profile_delete-button btn btn-lg btn-danger" href="{{ path('app_ustensile_delete', {'id': ustensile.id}) }}" role="button">Supprimer</a>
    </div>
{% endblock %}