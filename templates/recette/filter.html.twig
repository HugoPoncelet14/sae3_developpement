{% extends 'base.html.twig' %}

{% block title %}Filtre des recettes{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                {% include 'recette/_filter.html.twig' with {form: form} only %}
            </div>
            <div class="col-md-9">
                <div class="grid">
                    {% for recette in recettes %}
                        {% include 'recette/_recette.html.twig' with {recette: recette} only %}
                    {% endfor %}
                </div>
                <div>
                    {{ knp_pagination_render(recettes,'@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
