{% extends 'base.html.twig' %}

{% block title %}Profil de {{ user.nom }} {{ user.prenom }}{% endblock %}

{% block body %}
    <h1>Profil de {{ user.nom }} {{ user.prenom }}</h1>
    <div class="recipe_image-container" id="profile">
        <div class="recipe_image-box" id="profile">
            <img  src="/user/{{ user.id }}/image" alt="Photo de profil">
        </div>
    </div>
    <dl>
        <dt>Pr√©nom</dt><dd>{{ user.prenom }}</dd>
        <dt>Nom</dt><dd>{{ user.nom }}</dd>
        <dt>Email</dt><dd>{{ user.email }}</dd>
        <dt>Pseudo</dt><dd>{{ user.pseudo }}</dd>
        <dt>Date de naissance</dt><dd>{{user.dateNais|date('d/m/Y')}}</dd>
        <dt>Allergenes</dt><dd>
            <ul>
                {% for element in user.allergenes %}
                <li>{{ element.nomAll }}</li>
                {% endfor %}
            </ul>
        </dd>
    </dl>
    <a class="w-100 btn btn-lg btn-primary" href="{{ path('app_user_update', {'id': user.id}) }}" role="button">Modifier</a>
    <a class="w-100 btn btn-lg btn-secondary" href="{{ path('app_user_delete', {'id': user.id}) }}" role="button">Supprimer</a>
{% endblock %}



